<div class="container mx-auto px-4 py-8">
  <div class="max-w-3xl mx-auto">
    <div class="mb-6">
      <%= link_to 'â† Back to My Aircraft', aircrafts_path, class: 'text-blue-600 hover:text-blue-800' %>
    </div>

    <div class="bg-white rounded-lg shadow-lg p-8">
      <div class="flex justify-between items-start mb-6">
        <h1 class="text-3xl font-bold text-gray-900"><%= @aircraft.registration %></h1>
        <% if @aircraft.owner == current_user %>
          <div class="flex space-x-2">
            <%= link_to 'Edit', edit_aircraft_path(@aircraft), class: 'bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded' %>
            <%= button_to 'Remove', aircraft_path(@aircraft), method: :delete, data: { confirm: 'Are you sure?' }, class: 'bg-red-600 hover:bg-red-700 text-white font-bold py-2 px-4 rounded' %>
          </div>
        <% end %>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div>
          <h2 class="text-xl font-semibold text-gray-900 mb-4">Aircraft Details</h2>
          <div class="space-y-3">
            <div>
              <label class="block text-sm font-medium text-gray-600">Model</label>
              <p class="mt-1 text-gray-900"><%= @aircraft.model %></p>
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-600">Capacity</label>
              <p class="mt-1 text-gray-900"><%= @aircraft.capacity %> passengers</p>
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-600">Range</label>
              <p class="mt-1 text-gray-900"><%= @aircraft.range_nm %> nautical miles</p>
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-600">Manufacture Date</label>
              <p class="mt-1 text-gray-900"><%= @aircraft.manufacture_date.strftime('%B %Y') %></p>
            </div>
          </div>
        </div>

        <div>
          <h2 class="text-xl font-semibold text-gray-900 mb-4">Owner Information</h2>
          <div class="space-y-3">
            <div>
              <label class="block text-sm font-medium text-gray-600">Owner</label>
              <p class="mt-1 text-gray-900"><%= @aircraft.owner.email %></p>
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-600">Registration Date</label>
              <p class="mt-1 text-gray-900"><%= @aircraft.created_at.strftime('%B %d, %Y') %></p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div> 