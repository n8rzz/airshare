<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold text-gray-900">My Aircraft</h1>
    <%= link_to 'Register New Aircraft', new_aircraft_path, class: 'bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded' %>
  </div>

  <% if @aircrafts.any? %>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% @aircrafts.each do |aircraft| %>
        <div class="bg-white rounded-lg shadow p-6">
          <h2 class="text-xl font-semibold text-gray-900 mb-2"><%= aircraft.registration %></h2>
          <div class="text-gray-600">
            <p><strong>Model:</strong> <%= aircraft.model %></p>
            <p><strong>Capacity:</strong> <%= aircraft.capacity %> passengers</p>
            <p><strong>Range:</strong> <%= aircraft.range_nm %> nautical miles</p>
            <p><strong>Manufacture Date:</strong> <%= aircraft.manufacture_date.strftime('%B %Y') %></p>
          </div>
          <div class="mt-4 flex space-x-2">
            <%= link_to 'View Details', aircraft_path(aircraft), class: 'text-blue-600 hover:text-blue-800' %>
            <%= link_to 'Edit', edit_aircraft_path(aircraft), class: 'text-gray-600 hover:text-gray-800' %>
            <%= button_to 'Remove', aircraft_path(aircraft), method: :delete, data: { confirm: 'Are you sure?' }, class: 'text-red-600 hover:text-red-800' %>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="bg-gray-50 rounded-lg p-8 text-center">
      <p class="text-gray-600 text-lg">You haven't registered any aircraft yet.</p>
      <p class="mt-4">
        <%= link_to 'Register your first aircraft', new_aircraft_path, class: 'text-blue-600 hover:text-blue-800 font-medium' %>
      </p>
    </div>
  <% end %>
</div> 