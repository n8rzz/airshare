<div class="container mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold mb-8 font-serif">Admin Dashboard</h1>
  
  <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8" data-test-id="stats-grid">
    <div class="bg-white rounded-lg shadow p-6">
      <h2 class="text-xl font-semibold mb-2 font-serif">Total Users</h2>
      <p class="text-4xl font-bold text-blue-600 font-mono"><%= @total_users %></p>
    </div>
    
    <div class="bg-white rounded-lg shadow p-6">
      <h2 class="text-xl font-semibold mb-2 font-serif">Admin Users</h2>
      <p class="text-4xl font-bold text-purple-600 font-mono"><%= @admin_users %></p>
    </div>
    
    <div class="bg-white rounded-lg shadow p-6">
      <h2 class="text-xl font-semibold mb-2 font-serif">Regular Users</h2>
      <p class="text-4xl font-bold text-green-600 font-mono"><%= @regular_users %></p>
    </div>
  </div>
  
  <div class="bg-white rounded-lg shadow p-6">
    <h2 class="text-2xl font-bold mb-4 font-serif">Quick Actions</h2>
    <div class="space-y-4">
      <%= link_to "View All Users", admin_users_path, class: "block w-full md:w-auto text-center bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
      <%= link_to "View Admin Users", admins_admin_users_path, class: "block w-full md:w-auto text-center bg-purple-600 hover:bg-purple-700 text-white font-bold py-2 px-4 rounded" %>
      <%= link_to "View Regular Users", regular_users_admin_users_path, class: "block w-full md:w-auto text-center bg-green-600 hover:bg-green-700 text-white font-bold py-2 px-4 rounded" %>
    </div>
  </div>
</div>
