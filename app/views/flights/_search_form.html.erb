<%= form_with(url: flights_path, method: :get, class: "mb-8 bg-white/10 backdrop-blur-md shadow-lg rounded-lg p-6 border border-white/20") do |f| %>
  <div class="space-y-6">
    <!-- Flight Search Fields -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-x-4 gap-y-6">
      <!-- Left Column -->
      <div class="space-y-6">
        <!-- From Field -->
        <div class="relative">
          <%= label_tag 'search[origin]', "From", class: "block text-sm font-medium text-white mb-1" %>
          <div class="relative">
            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
              <i class="iconoir-city h-5 w-5 text-gray-400"></i>
            </div>
            <%= text_field_tag 'search[query]', 
                params.dig(:search, :query), 
                placeholder: "Enter airport code (e.g. BOS)", 
                class: "pl-10 block w-full rounded-md border-gray-300 bg-white/90 shadow-sm focus:ring-primary-500 focus:border-primary-500" %>
          </div>
        </div>

        <!-- Date and Passengers Row -->
        <div class="flex gap-4">
          <div class="flex-1">
            <%= label_tag 'search[date]', "Depart", class: "block text-sm font-medium text-white mb-1" %>
            <div class="relative">
              <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                <i class="iconoir-calendar h-5 w-5 text-gray-400"></i>
              </div>
              <%= date_field_tag 'search[date]', 
                  params.dig(:search, :date), 
                  class: "pl-10 block w-full rounded-md border-gray-300 bg-white/90 shadow-sm focus:ring-primary-500 focus:border-primary-500" %>
            </div>
          </div>

          <div>
            <%= label_tag 'search[passengers]', "Passengers", class: "block text-sm font-medium text-white mb-1" %>
            <div class="relative max-w-[100px]">
              <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                <i class="iconoir-profile-circle h-5 w-5 text-gray-400"></i>
              </div>
              <%= number_field_tag 'search[passengers]',
                  params.dig(:search, :passengers) || 1,
                  min: 1,
                  class: "pl-10 block w-full rounded-md border-gray-300 bg-white/90 shadow-sm focus:ring-primary-500 focus:border-primary-500" %>
            </div>
          </div>
        </div>
      </div>

      <!-- Right Column -->
      <div class="flex flex-col">
        <!-- To Field -->
        <div class="relative mb-6">
          <%= label_tag 'search[destination]', "To", class: "block text-sm font-medium text-white mb-1" %>
          <div class="relative">
            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
              <i class="iconoir-city h-5 w-5 text-gray-400"></i>
            </div>
            <%= text_field_tag 'search[destination]', 
                params.dig(:search, :destination), 
                placeholder: "Enter airport code (e.g. LAX)", 
                class: "pl-10 block w-full rounded-md border-gray-300 bg-white/90 shadow-sm focus:ring-primary-500 focus:border-primary-500" %>
          </div>
        </div>

        <!-- Search Button -->
        <div class="flex justify-end mt-auto">
          <div class="relative">
            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
              <i class="iconoir-search h-5 w-5 text-white"></i>
            </div>
            <%= submit_tag "Search", 
                class: "pl-10 px-6 py-2.5 bg-accent-500 hover:bg-accent-400 text-white rounded-md font-semibold shadow-lg hover:shadow-accent-500/50 transform transition-all duration-200 hover:scale-105" %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %> 