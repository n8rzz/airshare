<% flash.each do |name, msg| %>
  <% if msg.is_a?(String) %>
    <div data-controller="flash" class="<%= name == 'notice' ? 'bg-green-50 border-green-400' : 'bg-red-50 border-red-400' %> border mx-4 sm:mx-6 lg:mx-8 my-4 rounded-lg">
      <div class="px-4 py-3">
        <div class="flex items-center justify-between">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <% if name == 'notice' %>
                <svg class="h-5 w-5 text-green-600" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              <% else %>
                <svg class="h-5 w-5 text-red-600" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              <% end %>
            </div>
            <div class="ml-3">
              <p class="text-sm font-medium <%= name == 'notice' ? 'text-green-800' : 'text-red-800' %>"><%= msg %></p>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
<% end %> 